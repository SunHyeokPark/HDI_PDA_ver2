<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 투명 배경 -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#00000000" />
        </shape>
    </item>
    
    <!-- 테두리 -->
    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width="3dp"
                android:color="#00FF00" />
            <corners android:radius="12dp" />
        </shape>
    </item>
    
    <!-- 모서리 강조 (좌상단) -->
    <item
        android:width="30dp"
        android:height="30dp"
        android:gravity="start|top">
        <shape android:shape="rectangle">
            <stroke
                android:width="4dp"
                android:color="#00FF00" />
        </shape>
    </item>
    
    <!-- 모서리 강조 (우상단) -->
    <item
        android:width="30dp"
        android:height="30dp"
        android:gravity="end|top">
        <shape android:shape="rectangle">
            <stroke
                android:width="4dp"
                android:color="#00FF00" />
        </shape>
    </item>
    
    <!-- 모서리 강조 (좌하단) -->
    <item
        android:width="30dp"
        android:height="30dp"
        android:gravity="start|bottom">
        <shape android:shape="rectangle">
            <stroke
                android:width="4dp"
                android:color="#00FF00" />
        </shape>
    </item>
    
    <!-- 모서리 강조 (우하단) -->
    <item
        android:width="30dp"
        android:height="30dp"
        android:gravity="end|bottom">
        <shape android:shape="rectangle">
            <stroke
                android:width="4dp"
                android:color="#00FF00" />
        </shape>
    </item>
</layer-list>
